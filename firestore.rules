rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Departments, Semesters, Subjects: Public Read, Auth Write
    match /departments/{dept} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    match /semesters/{sem} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    match /subjects/{sub} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // Notes: Public Read, Auth Write (optionally check uploadedBy)
    match /notes/{note} {
      allow read: if true;
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && resource.data.uploadedBy == request.auth.uid;
    }
  }
}
